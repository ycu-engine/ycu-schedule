{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2020",
        "noEmit": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
    },
    "include": [
        "global.d.ts",
        "src/**/*.tsx",
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules/**/*",
        ".cache/**/*",
        "public/**/*",
    ],
}