{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2020",
        "outDir": "lib"
    },
    "include": [
        "api/**/*.ts",
        "resources/**/*.ts",
        "functions/**/*.ts",
        "serverless.ts",
        "web/**/*.ts",
        "meta.ts",
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "web/node_modules/**/*",
        "web/.cache/**/*",
        "web/public/**/*",
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}